<div class="listing">
    <p>{{name}}</p>
    <img src="{{imageUrl}}">
    <h2>Brand: {{brand}}</h2>
    <div class="info">
        <div id="data-info">
            <h3>Seller: {{seller}}</h3>
            <h3>Fuel: {{fuel}}</h3>
            <h3>Year: {{year}}</h3>
            <h3>Price: {{price}} $</h3>
        </div>
        <div id="data-buttons">
            <ul>
                <li class="action">
                    <a href="#/carListingDetails/{{_id}}" class="button-carDetails">Details</a>
                </li>
                {{#if isCreator}}
                    <li class="action">
                        <a href="#/carListingEdit/{{_id}}" class="button-carDetails">edit</a>
                    </li>
                    <li class="action">
                        <a href="#/carListingDelete/{{_id}}" class="button-carDetails">delete</a>
                    </li>
                {{/if}}

            </ul>
        </div>
    </div>

</div>